<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:layout_constraintBottom_toBottomOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<android.support.v7.widget.AppCompatImageView
    android:id="@+id/imageIndianFoods"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scaleType="centerCrop"
    android:src="@drawable/images"
    />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chicken_biriyani"
        app:layout_constraintTop_toBottomOf="@id/imageIndianFoods"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        />
    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imagePrice"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:src="@drawable/price"
        android:backgroundTint="@color/btn_bg"
        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/priceAmount"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/imagePrice"
        android:layout_marginTop="5dp"
        android:textColor="@color/btn_bg"
        android:fontFamily="sans-serif"
        />
</android.support.constraint.ConstraintLayout>