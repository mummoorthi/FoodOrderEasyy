<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.moorthi.foodorderone.Activity.CartDetails">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/toolbarTitle"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/white">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/ic_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/title"
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toEndOf="@id/ic_back"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/cartImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/cart_icon"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/count"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/circile"
            app:layout_constraintStart_toEndOf="@id/cartImage"
            android:layout_marginTop="5dp"
            android:text="1"
            android:textColor="@color/white"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            />
    </android.support.constraint.ConstraintLayout>
    <android.support.v7.widget.RecyclerView
        app:layout_constraintTop_toBottomOf="@id/toolbarTitle"
        android:id="@+id/cartRecylerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="8"
        app:layout_constraintBottom_toTopOf="@id/totalParent"
        >
    </android.support.v7.widget.RecyclerView>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/totalParent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/cartRecylerview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_weight="1"
        >
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/granttotalTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/grand_total"
            android:layout_marginStart="70dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/equal"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/equal"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/granttotalTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/priceImage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Total"
            android:text="100"
            android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@id/priceImage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
        />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
