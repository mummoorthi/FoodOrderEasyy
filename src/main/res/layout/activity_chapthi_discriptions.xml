<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <android.support.constraint.ConstraintLayout
        android:id="@+id/toolbarParent"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/white"
        >
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/backHomelist"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/ic_back"
            app:layout_constraintTop_toTopOf="parent"
            />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/toolbartitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chapati"
            android:layout_marginStart="15dp"
            android:textSize="18dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/backHomelist"
            />
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/cardImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/cart_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="10dp"
            />
    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.AppCompatImageView
        app:layout_constraintTop_toBottomOf="@id/toolbarParent"
        android:id="@+id/productImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/chapthi2"
        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/dosadis"
        app:layout_constraintTop_toBottomOf="@id/productImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chapthidis"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="left"
        android:textColor="@color/black"
        />



</android.support.constraint.ConstraintLayout>
